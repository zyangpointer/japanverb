        <TextBox x:Name="txtDictNameInput" HorizontalAlignment="Left" Height="23" Margin="319,28,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtTeFormInput" HorizontalAlignment="Left" Height="23" Margin="319,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtNayiFormInput" HorizontalAlignment="Left" Height="23" Margin="319,104,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtTaFormInput" HorizontalAlignment="Left" Height="23" Margin="319,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="249,35,0,0" TextWrapping="Wrap" Text="字典形" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="249,75,0,0" TextWrapping="Wrap" Text="Te形" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="249,111,0,0" TextWrapping="Wrap" Text="Na-yi形" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="249,152,0,0" TextWrapping="Wrap" Text="Ta 形" VerticalAlignment="Top"/>
        <Button x:Name="btnPrev" Content="前一个" HorizontalAlignment="Left" Margin="222,218,0,0" VerticalAlignment="Top" Width="75" Click="BtnPrev_Click" RenderTransformOrigin="0.464,0.435"/>
        <Button x:Name="btnNext" Content="后一个" HorizontalAlignment="Left" Margin="302,218,0,0" VerticalAlignment="Top" Width="75" Click="BtnNext_Click" RenderTransformOrigin="0.464,0.435"/>
        <Button x:Name="btnCheck" Content="核对" HorizontalAlignment="Left" Margin="382,218,0,0" VerticalAlignment="Top" Width="75" Click="BtnCheck_Click" RenderTransformOrigin="0.464,0.435"/>

    </Grid>
</Window>
